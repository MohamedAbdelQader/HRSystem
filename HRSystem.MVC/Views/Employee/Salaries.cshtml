@using HRSystem.ViewModels
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model List<EmployeeViewModel>
@{
    Layout = "_Layout";
}
<div class="main-panel">
        <div class="main-content">
          <div class="content-wrapper">
            <div class="container-fluid"><!-- Zero configuration table -->
<section id="configuration">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">Salaries Information</h4>
                    </div>
                </div>
                <div class="card-body collapse show">
                    <div class="card-block card-dashboard">
                        <div class="row">
                            
                            <div class="col-lg-1"></div>
                            <div class="col-lg-3">
                                <button id="addRow" class="btn btn-primary mb-2">
                                    <i class="ft-plus"></i>&nbsp;
                                    <a asp-action="Add" asp-controller="Employee">  Add New Employee</a>
                                </button>
                            </div>
                        </div>
                        <div class="card mb-4">
                            
                            <div class="card-body">
                                <table class="Table table-bordered" id="datatablesSimple">
                                    <thead>
                                        <tr>
                                            <th scope="col">FullName</th>
                                            <th scope="col">Salary</th>
                                            <th scope="col">Salary After Additions and Discounts</th>
                                            <th scope="col">Salary After Month</th>
                                            <th scope="col">Additions</th>
                                            <th scope="col">Discounts</th>
                                            <th scope="col">AdditionHours</th>
                                            <th scope="col">DiscountHours</th>
                                            <th scope="col">Attendance This Month</th>
                                            <th scope="col">Edit This</th>
                                            
                                        </tr>
                                    </thead>
                                    
                                    <tbody>
                                        @foreach (var Emp in Model)
                                        {
                                            <tr>
                                                <td>@Emp.FullName</td>
                                                <td>@Emp.Salary</td>
                                                <td>@Emp.LastSalary</td>
                                                <td>@Emp.SalaryAfterMonth</td>
                                                <td>@Emp.Additions</td>
                                                <td>@Emp.Discounts</td>
                                                <td>@Emp.AdditionHours</td>
                                                <td>@Emp.DiscountHours</td>
                                                <td>@Emp.CounterOfMonth</td>
                                                <td><a class="btn btn-success" asp-action="UpdateSalary" asp-controller="Employee" asp-route-ID=@Emp.UserId>Edit</a>Edit</td>
                                            </tr>
                                        }



                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

 </div>
          </div>
        </div>
        </div>
        