@using HRSystem.Models
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Attendance
@{
    Layout = "_EmployeeLayout";
}
<div class="main-panel">
<div class="main-content">
    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Zero configuration table -->
            <section id="configuration">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title-wrap bar-success">
                                    <h4 class="card-title">Attendance and departure request</h4>
                                </div>
                            </div>
                            
                            <div class="card-header">
                                <div class="card-title-wrap bar-success">
                                    <h4 class="card-title">Request A Form</h4>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="px-3">
                                    @if(Model.EmployeeID==null){
                                    <form asp-action="StartAttendance" asp-controller="Attendance" class="form form-horizontal">
                                        <div class=" row">
                                            @if(Model.EmployeeID!=null){
                                            <div class="col-md-12">
                                                <div class=" row form-group">
                                                    <label class="col-md-3 label-control">Start time: </label>
                                                    <div class="position-relative has-icon-left col-lg-9">
                                                        <input type="time" asp-for="AttendanceDate" id="timesheetinput5" class="form-control" name="AttendanceDate" disabled>
                                                        <div class="form-control-position">
                                                            <i class="ft-clock"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="col-md-12">
                                                <div class=" row form-group">
                                                    <label class="col-md-3 label-control">Start time: </label>
                                                    <div class="position-relative has-icon-left col-lg-9">
                                                        <input type="time" asp-for="AttendanceDate" id="timesheetinput5" class="form-control" name="AttendanceDate" >
                                                        <div class="form-control-position">
                                                            <i class="ft-clock"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                                }
                                                @if(Model.EmployeeID==null){
                                            <div class="col-md-12">
                                                <div class=" row form-group">
                                                    <label class="col-md-3 label-control">End time: </label>
                                                    <div class="position-relative has-icon-left col-lg-9">
                                                        <input type="time" asp-for="CheckOutDate" id="timesheetinput6" class="form-control" name="CheckOutDate" disabled>
                                                        <div class="form-control-position">
                                                            <i class="ft-clock"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            }
                                            else{
                                            <div class="col-md-12">
                                                <div class=" row form-group">
                                                    <label class="col-md-3 label-control">End time: </label>
                                                    <div class="position-relative has-icon-left col-lg-9">
                                                        <input type="time" asp-for="CheckOutDate" id="timesheetinput6" class="form-control" name="CheckOutDate">
                                                        <div class="form-control-position">
                                                            <i class="ft-clock"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            }
                                        <div class="col-md-12">
                                                <div class=" row form-group">
                                                    <div class="position-relative has-icon-left col-lg-9">
                                <button type="submit" class="btn btn-success">
                                    <i class="icon-note"></i> Save
                                </button>
                                </div>
                                </div>
                                </div>
                                        </div>
                                    </form>
                                    }
                                    else{
                                        <form asp-action="EndAttendance" asp-controller="Attendance" class="form form-horizontal">
                                        <div class=" row">
                                            @if(Model.EmployeeID!=null){
                                            <div class="col-md-12">
                                                <div class=" row form-group">
                                                    <label class="col-md-3 label-control">Start time: </label>
                                                    <div class="position-relative has-icon-left col-lg-9">
                                                        <input type="time" id="timesheetinput5" class="form-control" name="starttime" disabled>
                                                        <div class="form-control-position">
                                                            <i class="ft-clock"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="col-md-12">
                                                <div class=" row form-group">
                                                    <label class="col-md-3 label-control">Start time: </label>
                                                    <div class="position-relative has-icon-left col-lg-9">
                                                        <input type="time" asp-for="AttendanceDate" id="timesheetinput5" class="form-control" name="starttime" >
                                                        <div class="form-control-position">
                                                            <i class="ft-clock"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                                }
                                                @if(Model.EmployeeID==null){
                                            <div class="col-md-12">
                                                <div class=" row form-group">
                                                    <label class="col-md-3 label-control">End time: </label>
                                                    <div class="position-relative has-icon-left col-lg-9">
                                                        <input type="time" asp-for="CheckOutDate" id="timesheetinput6" class="form-control" name="CheckOutDate" disabled>
                                                        <div class="form-control-position">
                                                            <i class="ft-clock"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            }
                                            else{
                                            <div class="col-md-12">
                                                <div class=" row form-group">
                                                    <label class="col-md-3 label-control">End time: </label>
                                                    <div class="position-relative has-icon-left col-lg-9">
                                                        <input type="time" asp-for="CheckOutDate" id="timesheetinput6" class="form-control" name="CheckOutDate">
                                                        <div class="form-control-position">
                                                            <i class="ft-clock"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            }
                                        <div class="col-md-12">
                                                <div class=" row form-group">
                                                    <div class="position-relative has-icon-left col-lg-9">
                                <button type="submit" class="btn btn-success">
                                    <i class="icon-note"></i> Save
                                </button>
                                </div>
                                </div>
                                </div>
                                        </div>
                                    </form>
                                    }
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>
</div>